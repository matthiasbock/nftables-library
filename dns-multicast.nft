#!/usr/bin/env -S /usr/sbin/nft -I /etc/firewall/nftables-library/ -f

include "filter.nft"

# Multicast DNS
add rule inet filter input  ip daddr == 224.0.0.251 udp sport 5353 udp dport 5353 counter accept
add rule inet filter output ip daddr == 224.0.0.251 udp sport 5353 udp dport 5353 counter accept
add rule inet filter input  ip6 daddr == ff02::00fb udp sport 5353 udp dport 5353 counter accept
add rule inet filter output ip6 daddr == ff02::00fb udp sport 5353 udp dport 5353 counter accept

